<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/screen_spacing">

        <TextView
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Menu"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:textAppearance="@style/textAppearance.size16" />


        <include
            android:id="@+id/lnt_recordings"
            layout="@layout/view_item_room_menu"
            app:title="@{@string/dialog_room_list_menu_recording}"
            app:icon="@{@drawable/ic_recording}"
            />

        <include
            android:id="@+id/lnt_delete"
            layout="@layout/view_item_room_menu"
            app:title="@{@string/dialog_room_list_menu_delete}"
            app:icon="@{@drawable/ic_delete}"
            />

    </LinearLayout>
</layout>